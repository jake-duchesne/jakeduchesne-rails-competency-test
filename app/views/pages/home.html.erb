<p><%= render 'shared/article_nav' %></p>
    <div class="container">
        <strong>
            <%= link_to 'Article Index', articles_path %>
        </strong>
        <div class="p-2">
            <h1>Article App</h1>
        </div>
        <div class="d-flex justify-content-center">

            <div class="d-flex flex-row">
                <% @article_list.each do |category, article_items| %>
                <div class="p-2">
                    <h1><%= category %></h1>
                    <% article_items.last(3).each do |article_item| %>
                    <div>
                        <strong><%= article_item.title %></strong>
                        <p><%= article_item.body %></p>
                    </div>

                    <% end %>
                </div>
                <% end %>
            </div>
        </div>

    </div>